with "opengl.gpr";

library project OpenGL.Freetype is

   for Languages use ("ada");
   for Library_Name use "FreetypeAda";
   for Source_Dirs use ("src/freetype");
   for Object_Dir use "obj";
   for Library_Dir use "lib";

package Compiler is
    for Default_Switches ("ada") use ("-gnatwa", "-O2", "-gnatn2", "-fstack-check");
end Compiler;

   package Linker is
      for Linker_Options use ("-L/usr/local/lib", "-lfreetype");
   end Linker;

end OpenGL.Freetype;

