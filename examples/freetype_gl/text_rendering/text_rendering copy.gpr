limited with "../../../opengl-glfw.gpr";

project Text_Rendering is

   for Source_Dirs use ("src", "../../common", "../../free_type");
   for Object_Dir use "obj";
   for Exec_Dir use ".";
   for Main use ("render_text.adb");

   package Compiler is
      for Default_Switches ("ada") use ("-gnatyBcltux", "-fstack-check");
   end Compiler;

   package Linker is
      for Switches ("ada") use ("-L/usr/local/lib", "-lfreetype");
   end Linker;

end Text_Rendering;

