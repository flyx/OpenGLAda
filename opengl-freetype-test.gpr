with "opengl_shared";
with "opengl-glfw";
with "opengl-freetype";

project OpenGL.FreeType.Test is
   for Object_Dir use "obj";
   for Exec_Dir use "bin";

   for Source_Dirs use OpenGL.Glfw.Shared_Test_Sources & "tests/freetype";
   for Main use ("freetype_test-basic");

   package Ide renames OpenGL_Shared.Ide;
   package Builder renames OpenGL_Shared.Builder;
   package Compiler renames OpenGL_Shared.Compiler;
end OpenGL.FreeType.Test;
